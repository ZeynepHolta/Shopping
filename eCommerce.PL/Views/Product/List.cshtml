@using eCommerce
@model List<Product>

@{
    ViewBag.Title = "List";
}

<div class="row">
    <div class="col-md-4">
        <ul class="list-group">
            @foreach (ShoppingCard item in ViewBag.ShoppingCards)
            {
                @foreach (Product pro in ViewBag.Products)
                {
                    <li class="list-group-item">@Html.ActionLink(pro.ProductName, "List", new { shoppingCardId = item.ShoppingCardId })</li>
                }
            }
        </ul>
    </div>
    <div class="col-md-8">
        <div>
            @Html.ActionLink("New Product", "Create", null, new { @class = "btn btn-success" })
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Product item in Model)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.Price</td>
                        <td>@Html.ActionLink("Delete", "Delete", new { productID = item.ProductId }, new { @class = "btn btn-danger" })</td>
                        <td>@Html.ActionLink("Update", "Update", new { productID = item.ProductId }, new { @class = "btn btn-info" })</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
