@using eCommerce
@model Product

@{
    ViewBag.Title = "Update";
}

<h2>Update</h2>

<div class="row">
    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.DropDownListFor(a => a.ShoppingCards, (IEnumerable<SelectListItem>)ViewBag.ShoppingCard, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(a => a.ProductName, new { @class = "form-control", placeholder = "Product Name" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(a => a.Price, new { @class = "form-control", placeholder = "Price" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Save</button>
        </div>
    }
</div>

<div>
    @if (ViewBag.IsSuccess != null)
    {
        <span class="alert-danger">Please try again !</span>
    }
</div>